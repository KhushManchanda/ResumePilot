{
  "name": "resumepilot-server",
  "version": "1.0.0",
  "description": "ResumePilot backend API with LaTeX compilation and AI integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "node -r dotenv/config scripts/migrate.js",
    "db:seed": "node -r dotenv/config scripts/seed.js",
    "test": "jest"
  },
  "keywords": [
    "resume",
    "latex",
    "ai",
    "pdf"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "better-sqlite3": "^11.0.0",
    "openai": "^4.24.1",
    "fast-json-patch": "^3.1.1",
    "multer": "^1.4.5-lts.1",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  }
}